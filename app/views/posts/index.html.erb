<div class = "container">
<h1>All Posts</h1>


<div class="blog content">
<div class="col-sm-10">
    <% @posts.each do |post| %>
      
        <div class="text-left">
          <h2><%= post.title %></h2>
          <h5><%= post.created_at.strftime("%A, %B %-d, %Y") %></h5>
          </div>

          <div>
            <%= raw post.body.truncate(240) %>
            </div>

            <div class="text-left">
              <%= link_to 'Continue Reading', post_by_title_path(post.title) %>
              </div>

             <hr/>

    <% end %>
</div>
</div>

<br>
