<div class="container">
<div class="post">
<div class="col-sm-8 offset-sm-4">
        <div class="text-left">
          <h2><%= @post.title %></h2>
          <h5><%= @post.created_at.strftime("%A, %B %-d, %Y") %></h5>
        </div>

        <div class="content">
          <p><%= raw @post.body %></p>
        </div>

        <div class="links">
        <div class="text-left">
              <%= link_to 'Return to all posts', posts_path %>
              <% if logged_in? %>
                <%= link_to 'Edit', edit_post_path(@post) %>
                <%= link_to "Delete", @post, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
        </div>
        </div>
</div>
</div>
</div>